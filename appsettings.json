{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "DatabaseConnections": {
    "AuthorDatabase": "Server=(localdb)\\mssqllocaldb;Database=AuthorDb;Trusted_Connection=true;TrustServerCertificate=true",
    "BookDatabase": "Server=(localdb)\\mssqllocaldb;Database=BookDb;Trusted_Connection=true;TrustServerCertificate=true",
    "InventoryDatabase": "Server=(localdb)\\mssqllocaldb;Database=InventoryDb;Trusted_Connection=true;TrustServerCertificate=true",
    "UserDatabase": "Server=(localdb)\\mssqllocaldb;Database=UserDb;Trusted_Connection=true;TrustServerCertificate=true",
    "OrderDatabase": "Server=(localdb)\\mssqllocaldb;Database=OrderDb;Trusted_Connection=true;TrustServerCertificate=true"
  },
  "ExternalApis": {
    "Inventory": {
      "BaseUrl": "https://api.inventory.example.com",
      "ApiKey": "your-inventory-api-key",
      "TimeoutSeconds": 30,
      "RetryCount": 3
    },
    "Recommendations": {
      "BaseUrl": "https://api.recommendations.example.com",
      "ApiKey": "your-recommendations-api-key",
      "TimeoutSeconds": 30,
      "RetryCount": 3
    },
    "Payment": {
      "BaseUrl": "https://api.payment.example.com",
      "ApiKey": "your-payment-api-key",
      "TimeoutSeconds": 60,
      "RetryCount": 5
    }
  }
}
